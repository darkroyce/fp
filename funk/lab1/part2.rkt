; функція для визначення чи є число степенем двійки
(define (f n)
  (cond ((= (/ n 2) 1) (display "Yes"))
        ((EVEN? n) (f (/ n 2)))  ; Перевірка чи n парне, тоді рекурсивний виклик функції
        ((ODD? n) (display "No")) ; Перевірка чи n непарне, тоді вивід "No"
        )
  )

(display "Перевірка чи 20 є степенем двійки: ") (f 16)