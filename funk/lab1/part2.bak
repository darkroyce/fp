(display "Клим Липовський ІПЗ-41. Лаб 1. Варіант 9. Частина 1.\n")

(define depth 0)
(define (f n)
  (set! depth (+ depth 1))
  (cond ((= n 1) 1)
        ((EVEN? n) (* 2 (f(/ n 2))))  ; Перевірка чи n парне
        ((ODD? n)(* 2 (f(/ (- n 1) 2)))) ; Перевірка чи n непарне
        )
  )

(display "Номер людини що залишиться серед 213 людей: ") (f 213)
(display "Глибина рекурсії: ") depth